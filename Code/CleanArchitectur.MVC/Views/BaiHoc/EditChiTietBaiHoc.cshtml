@model CleanArchitecture.Application.ViewModels.BaiHocUpload

@{
    ViewData["Title"] = "BaiHoc";
}

<h1>Edit</h1>

<h4>Chi Tiết Bài Học</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditChiTietBaiHoc" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BaiHoc.Id" />
            <input type="hidden" asp-for="BaiHoc.IdbaiHoc" />
            <div class="form-group">
                <label asp-for="BaiHoc.NoiDung" class="control-label"></label>
                <input asp-for="BaiHoc.NoiDung" class="form-control" />
                <span asp-validation-for="BaiHoc.NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaiHoc.LinkMp3" class="control-label"></label>
                <input asp-for="BaiHoc.LinkMp3" class="form-control" readonly/>
                <span asp-validation-for="BaiHoc.LinkMp3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyMp3" class="control-label" style="display: inline">Thay Đổi File Mp3</label>
                <input asp-for="MyMp3" class="form-control" />
                <button type="button" id="butt" onclick="reset()" >Bỏ Chọn</button>
                <span asp-validation-for="MyMp3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaiHoc.GhiChu" class="control-label"></label>
                <input asp-for="BaiHoc.GhiChu" class="form-control" />
                <span asp-validation-for="BaiHoc.GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.BaiHoc.IdbaiHoc">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function reset() {
        document.getElementById("resetfile").value = "";
    }
</script>
